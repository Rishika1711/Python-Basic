def Simpleinterestcalc():
    principle=int(input("Enter the value of your principle"))
    rate=int(input("Enter the value of the rate"))
    time=int(input("Enter the value of time"))
    print(" You have entered value of principle as", principle, ", rate as",rate, "and time as", time)
    SI=(principle*rate*time)/100
    Amount=SI+principle
    print("Your interest after ", time, " year is ", SI, " you will have to pay total ", Amount, "Â£") 
Simpleinterestcalc()
